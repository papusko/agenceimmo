{% extends 'base.html.twig' %}

{% block title %}Hello MobilierController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

{% for message in app.flashes('success') %}
	<div class="alert alert-success">
		{{message}}
	</div>

{% endfor%}


<div class="container">
	<h2>Affichage des immobiliers disponible</h2>
	<div class="row flex">
		{% for m in mobilier %}
			<div class="col -3">
				<div class="card">
					<div class="card-body">
										{% if m.filename %}
									<img src="/images/produits/{{ m.filename}}" alt="card-img-top" style="width:100%; height:auto">
									{%endif%}
						<h5 class="card-title">	
							<a  href="#">{{ m.titre}}</a>
							<p class="card_text">{{ m.ville}} ({{ m.adresse}}) </p>
							<div class="text-primary">{{ m.prix}} Fcfa</div>
						</h5>
					</div>	
				</div>
			</div>
		{% endfor %}
	</div>	
</div>










{% endblock %}

